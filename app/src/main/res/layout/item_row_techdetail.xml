<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_default_elevation"
        android:layout_marginRight="@dimen/cardview_default_elevation"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/img_item_photo_detail"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_marginBottom="4dp"
            tools:src="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Produk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="5dp"
                android:text="@string/harga"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Harga" />

            <TextView
                android:id="@+id/detail_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                tools:text="harga" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="5dp"
                android:text="@string/spesifikasi"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Spesifikasi" />

            <TextView
                android:id="@+id/detail_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="3"
                android:textSize="16sp"
                tools:text="Spesifikasi" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_default_elevation"
        android:layout_marginTop="230dp"
        android:layout_marginRight="@dimen/cardview_default_elevation"
        android:outlineAmbientShadowColor="@color/black"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="@string/detail"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Spesifikasi : " />

        <TextView
            android:id="@+id/detail_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:lines="25"
            android:textSize="12sp"
            tools:text="Detail" />
    </androidx.cardview.widget.CardView>


